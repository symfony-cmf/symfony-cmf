<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="symfony_cmf_core.pathMapper" class="Symfony\Cmf\Bundle\CoreBundle\Helper\DirectPathMapper">
            <argument>%symfony_cmf_core.mainmenu_basepath%</argument>
        </service>

        <service id="symfony_cmf_core.fileHelper" class="Symfony\Cmf\Bundle\CoreBundle\Helper\RepositoryFileHelper">
            <argument>%symfony_cmf_core.content_basepath%</argument>
            <argument>%symfony_cmf_core.filestore_basepath%</argument>
            <argument>%symfony_cmf_core.filestore_relative_basepath%</argument>
        </service>

    </services>
</container>
