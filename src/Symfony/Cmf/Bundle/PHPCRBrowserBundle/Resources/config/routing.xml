<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="symfony_cmf_phpcr_browser_children" pattern="/children">
        <default key="_controller">symfony_cmf_phpcr_browser.controller:childrenAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="symfony_cmf_phpcr_browser_properties" pattern="/properties">
        <default key="_controller">symfony_cmf_phpcr_browser.controller:propertiesAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="symfony_cmf_phpcr_browser_move" pattern="/move">
        <default key="_controller">symfony_cmf_phpcr_browser.controller:moveAction</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
